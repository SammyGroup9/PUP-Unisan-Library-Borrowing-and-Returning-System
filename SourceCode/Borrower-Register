    }                                              

    private void btnSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        // getting the users input
        String username = txtRegisterUsername.getText();
        String password = txtRegisterPassword.getText();
        String firstname = txtFirstName.getText();
        String lastname = txtLastName.getText();
        
        if (firstname.equals("")){
            JOptionPane.showMessageDialog(null, "First Name Required");
        }
         else if(lastname.equals("")){
            JOptionPane.showMessageDialog(null,"Last Name Required!");
         }else if(! cLetters(firstname)){
            JOptionPane.showMessageDialog(null,"Invalid firstname!");
         }else if(! cLetters(lastname)){
            JOptionPane.showMessageDialog(null,"Invalid lastname!");
         }
         else if(username.equals("")){
            JOptionPane.showMessageDialog(null,"Username Required!");
        }
         else if(username.length() < 8){
            JOptionPane.showMessageDialog(null,"Username must contains of (8) characters");
         }
        else if(username.equals("Username")){
            JOptionPane.showMessageDialog(null,"Username Required!");
        }        
        else if(password.equals("")){
            JOptionPane.showMessageDialog(null,"Password Required!");
        }
        else if(password.equals("Password")){
            JOptionPane.showMessageDialog(null,"Password Required!");
        }else{
            boolean isExist = DataHandler.registerUser(username,password,firstname,lastname);
            if(isExist){
            JOptionPane.showMessageDialog(null," Account already exist");
            }else{
                DataHandler.registerUser(username,password,firstname,lastname);
                JOptionPane.showMessageDialog(null,"Welcome new user\nYou are now Registered");
                setVisible(false);
                new BorrowerLogin().setVisible(true);
            }
            
        }
    }                                         

    private void checkPassActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if(checkPass.isSelected()){
            txtRegisterPassword.setEchoChar((char)0);
        }
        else{
            txtRegisterPassword.setEchoChar('\u2022');
        }
        
    }                                         

