    private void btnBackAdminActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        setVisible(false);
        new LoginAs().setVisible(true);
    }                                            

    private void btnAdminClearActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        txtAdminUsername.setText("");
        passAdminPassword.setText("");
    }                                             

    private void btnAdminLoginActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        //get the admin input in the textfield
        String lblUsername = String.valueOf(txtAdminUsername.getText());
        String password = String.valueOf(passAdminPassword.getPassword());
                //check if the admin input is valid to set username and password 
                boolean isValid = checkAdmin.checkInput(lblUsername,password);
                
                //if the input is correct
                if (isValid){
                    JOptionPane.showMessageDialog(AdminLogin.this,"Welcome Admin");
                setVisible(false);
        new AdminInventory().setVisible(true);
        
                //if the input is incorrect
                }
                else{ JOptionPane.showMessageDialog(null, "ACCESS DENIED!");
                }
               
    }                                             

    private void chkAdminPasswordActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
        if(chkAdminPassword.isSelected()){
            passAdminPassword.setEchoChar((char)0);
        }
        else{
            passAdminPassword.setEchoChar('\u2022');

        }
    }                                                

    private void txtAdminUsernameActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
    }                                                

    private void passAdminPasswordActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
    }                                                 

    private void txtAdminUsernameFocusGained(java.awt.event.FocusEvent evt) {                                             
        // TODO add your handling code here:
         if(txtAdminUsername.getText().equals("Username")){
            txtAdminUsername.requestFocus();
            txtAdminUsername.setText("");

    }                                            
    }
    private void txtAdminUsernameFocusLost(java.awt.event.FocusEvent evt) {                                           
        // TODO add your handling code here:
         if(txtAdminUsername.getText().length()==0){
            txtAdminUsername.setText("Username");

        }
    }                                          

    private void passAdminPasswordFocusGained(java.awt.event.FocusEvent evt) {                                              
        // TODO add your handling code here:
        if(passAdminPassword.getText().equals("Password")){
            passAdminPassword.requestFocus();
            passAdminPassword.setText("");
            passAdminPassword.setEchoChar('\u2022');
        }
    }                                             

    private void passAdminPasswordFocusLost(java.awt.event.FocusEvent evt) {                                            
        // TODO add your handling code here:
        if(passAdminPassword.getText().length()==0){
            passAdminPassword.setText("Password");
            passAdminPassword.setEchoChar('\u0000');
        }
    }                                           

